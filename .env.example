# Database Configuration
DATABASE_URL=postgresql://user:password@postgres:5432/analytics_db
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=analytics_db

# Neo4j Configuration (External Service)
NEO4J_URI=bolt://host.docker.internal:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# n8n Configuration (External Service)
N8N_BASE_URL=http://host.docker.internal:5678
N8N_API_KEY=your_n8n_api_key
N8N_WORKFLOW_ID=your_workflow_id

# Application Configuration
SECRET_KEY=your_secret_key_for_sessions_change_this_in_production
DEBUG=true
LOG_LEVEL=INFO

# Security Note:
# In production, make sure to:
# 1. Use strong, randomly generated SECRET_KEY
# 2. Set DEBUG=false
# 3. Use secure passwords for all services
# 4. Configure proper network security
# 5. Use HTTPS for all external communications
